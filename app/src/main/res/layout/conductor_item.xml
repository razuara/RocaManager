<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/perfiImgSrcImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nombreCompletoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/perfiImgSrcImage"
            android:text="Nombre Conductor"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/cedeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cede Conductor"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/perfiImgSrcImage"
            android:layout_below="@+id/nombreCompletoTextView"
            android:layout_marginLeft="10dp">
        </TextView>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Conductor"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/perfiImgSrcImage"
            android:layout_below="@+id/cedeTextView"
            android:layout_marginLeft="10dp">
        </TextView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>